<div class="container">
  <div class="row">
    <div class="col s12">
      <ul class="tabs black">


        <li class="tab col s3"><a href="#char1" class="white-text"><%= sheet.charName %></a></li>
        <li class="tab col s3"><a href="#char2" class="white-text">Equipment</a></li>
        <li class="tab col s3"><a href="#char3" class="white-text">Spells</a></li>
        <li class="tab col s3"><a href="#char4" class="white-text">Bio</a></li>
      </ul>
    </div>
    <div id="char1" class="col s12 white-text">
      <h3><%= sheet.charName %></h3>
      <br>
      <%= sheet.charClass %>
      <br>
      <%= sheet.charLevel %>
      <br>
      <%= sheet.charRace %>
      <br>
      <h5>Traits</h5>
      <%= sheet.charTraits %>
      <br>
      <h5>Skills</h5>
      <%= sheet.charSkills %>
    </div>
    <div id="char2" class="col s12 white-text">
      <h5>Equipment</h5>
      <%= sheet.charEquip %>
    </div>
    <div id="char3" class="col s12 white-text">
      <h5>Spells</h5>
    <%= sheet.charSpells %></div>
    <div id="char4" class="col s12 white-text">
      <h5>Character Bio and History</h5>
    <%= sheet.charBio %></div>
  </div>
</div>
<div class="fixed-action-btn">
  <a class="btn-floating btn-large red darken-4">
    <i class="large material-icons">menu</i>
  </a>
  <ul>
    <li><a class="btn-floating red"><i class="material-icons">delete_forever</i></a></li>
    <li><a class="btn-floating yellow darken-1" href="/sheets/<%= sheet.id %>/edit">
      <i class="material-icons">edit</i></a></li>
    <li><a class="btn-floating blue" href="/sheets" ><i class="material-icons">arrow_back</i></a></li>
    </ul>
  </div>
