<% if (locals.message) { %>
  <p><%= message %></p>
  <% } %>
  <div class="loginbox">
    <div class="container">
      <div class="row">
        <div class="col s6">
          <form method="POST" action="/login">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="email" id="email" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="password" class="form-control">
            </div>

            <button class="btn btn-primary red darken-4">Login</button>
          </form>
        </div>
        <div class="card black darken-1 col s5 offset-s1 hide-on-small-only">
          <div class="card-content white-text">
            <span class="card-title">Welcome back to Lair!</span>
            <p>Please log in with your email address and password.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
