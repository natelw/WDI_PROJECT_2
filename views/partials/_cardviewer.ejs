<div class="row">
  <% sheets.forEach((sheet) => { %>

  <div class="col s12 m6 l3">
    <div class="card large black white-text">
      <div class="card-image activator waves-effect waves-block waves-light">

<div class="row s3">

          <div class="col s4 deep-purple darken-5 white-text">STR <%= sheet.charStr %></div>
          <div class="col s4 deep-purple darken-3 white-text">DEX <%= sheet.charDex %></div>
          <div class="col s4 deep-purple darken-1 white-text ">CON <%= sheet.charCon %></div>


          <div class="col s4 deep-purple darken-4 white-text">INT <%= sheet.charInt %></div>
          <div class="col s4 deep-purple darken-2 white-text">WIS <%= sheet.charWis %></div>
          <div class="col s4 deep-purple  white-text">CHA <%= sheet.charDex %></div>
        </div>
          <div class="container">
            <div class="spaced">
            <img src="/images/lairlogo1.png" alt="Lair Logo">


            </div>
          </div>
        </div>
      <div class="card-content">
        <span class="card-title activator white-text text-darken-4"><%= sheet.charName %><i class="material-icons right">more_vert</i></span>
        <p><a href="http://www.dandwiki.com/wiki/5e_SRD:<%= sheet.charClass %>"><%= sheet.charClass %></a></p>
        <div class="card-action">
              <a href="/sheets/<%= sheet.id %>">View</a>
              <a href="/sheets/<%= sheet.id %>/edit">Edit</a>
              <form class="sheetDeleteForm" action="/sheets/<%= sheet.id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE"/>
                <a href="#"><button class="sheetDelete">Delete</button></a>
              </form>

            </div>
        </div>
    <div class="card-reveal black-text">
      <span class="card-title grey-text text-darken-4">Level <%= sheet.charLevel %> /
      <%= sheet.charExp %> exp <i class="material-icons right">close</i></span>
      <p><h4>Skills</h4><%- sheet.charSkills %><h4>Traits</h4><%- sheet.charTraits %><h4>Spells</h4>  <ul>
            <% sheet.charSpells.split(',').forEach((spell) => { %>
              <li><%= spell %></li>
            <% }) %>
          </ul>
 </p>
    </div>
  </div>
</div>
<% }); %>

</div>
<div class="fixed-action-btn">
  <a class="btn-floating btn-large red darken-4">
    <i class="large material-icons">menu</i>
  </a>
  <ul>
    <li><a class="btn-floating yellow darken-4" href="/sheets/new">
      <i class="material-icons">library_add</i></a></li>
    <li><a class="btn-floating black" href="/" ><i class="material-icons">home</i></a></li>
  </ul>
</div>
